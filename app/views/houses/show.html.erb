<div class="house-show">
  <div class="house-show-info">
    <h2><%= @house.name %></h2>
    <img src="<%= @house.photo_url %>" alt="<%= @house.name %>">
    <p>Motto: <%= @house.motto %></p>
    <p>Territory: <%= @house.territory %></p>
    <%= link_to "edit this house", edit_house_path %>
    <hr>
  </div>

  <h3>Members</h3>
  <div class="house-characters">
    <% @house.characters.each do |character| %>
      <div class="house-characters-info">
        <a href="<%= house_character_path(@house, character) %>">
          <p><%= character.name %></p>
          <img src="<%= character.photo_url %>" alt="<%= character.name %>" class="house-characters-img">
        </a>
      </div>
    <% end %>
  </div>
</div>
